@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = null;
    var contentTypeClass = string.Join("", Model.ContentType.Alias.Select(x =>
    {
        if (char.IsUpper(x)) return "-" + char.ToLower(x);
        return x.ToString();
    })).ToLower();
}<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=2.0, user-scalable=1">
    <meta name="format-detection" content="telephone=no">
    
    <link rel="stylesheet" type="text/css" href="\Assets\CSS\main.min.css?v=0.01" />
    @RenderSection("Head", false)
</head>
<body class="@contentTypeClass">
    @RenderBody()
    @RenderSection("AfterBody", false)
</body>
</html>


